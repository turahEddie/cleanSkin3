<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/border"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_box_round"
    android:fadingEdge="horizontal|vertical|none"
    android:orientation="vertical"
    android:visibility="visible">

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="320dp"
        android:layout_height="561dp"
        android:background="@drawable/icon_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.589" />

    <EditText
        android:id="@+id/NewPuchaseDate"
        android:layout_width="220dp"
        android:layout_height="47dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="140dp"
        android:hint="Purchase Date"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/type"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_background2"
        android:text="@android:string/cancel"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewExpirationDate"
        app:layout_constraintVertical_bias="0.486" />

    <Button
        android:id="@+id/save"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:background="@drawable/rounded_background2"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        app:layout_constraintEnd_toStartOf="@+id/cancel"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewExpirationDate" />

    <Spinner
        android:id="@+id/type"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_marginTop="35dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newBrandName"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/blank"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="@+id/imageView16"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/imageView16"
        app:layout_constraintTop_toTopOf="@+id/imageView16"
        app:layout_constraintVertical_bias="0.031" />

    <EditText
        android:id="@+id/newBrandName"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginBottom="332dp"
        android:hint="Brand Name"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/NewExpirationDate"
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:layout_marginTop="35dp"
        android:hint="Expected Expiration"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewPuchaseDate"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/datePicker"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/NewExpirationDate"
        app:layout_constraintEnd_toEndOf="@+id/imageView16"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/NewPuchaseDate"
        app:layout_constraintTop_toBottomOf="@+id/type"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/calendar" />

</androidx.constraintlayout.widget.ConstraintLayout>